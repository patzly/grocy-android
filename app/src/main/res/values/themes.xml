<resources>

  <style name="Base.Grocy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_variant</item>
    <item name="colorOnPrimary">@color/on_primary</item>

    <item name="colorSecondary">@color/secondary</item>
    <item name="colorOnSecondary">@color/on_secondary</item>

    <item name="android:colorBackground">@color/background</item>
    <item name="colorOnBackground">@color/on_background</item>
    <item name="android:colorForeground">@color/on_background</item>

    <item name="colorSurface">@color/surface</item>
    <item name="colorOnSurface">@color/on_surface</item>
    <item name="snackbarButtonStyle">@style/Widget.Grocy.Button.TextButton.Snackbar</item>

    <item name="android:colorControlNormal">@color/on_background</item>
    <item name="android:colorControlActivated">@color/secondary</item>
    <item name="android:colorControlHighlight">@color/highlight</item>
    <item name="android:colorEdgeEffect">@color/highlight</item>

    <item name="recyclerViewStyle">@style/Widget.Grocy.RecyclerView</item>

    <item name="actionOverflowButtonStyle">@style/Widget.Grocy.ActionButton.OverFlow</item>

    <item name="android:fontFamily">@font/jost_book</item>
  </style>

  <style name="Theme.Grocy" parent="Base.Grocy">
    <item name="android:statusBarColor">@color/status_bar_lollipop</item>
    <item name="android:navigationBarColor">@color/black</item>
  </style>

  <style name="Theme.Grocy.NoNavBarDivider" parent="Theme.Grocy" />

  <style name="Theme.Grocy.Camera" parent="Theme.Grocy">
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="Theme.Grocy.BottomAppBar" parent="Theme.Grocy" />

  <style name="Theme.Grocy.Splash" parent="Theme.Grocy.BottomAppBar">
    <item name="android:colorBackground">@color/primary</item>
  </style>

  <style name="Base.Grocy.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_variant</item>
    <item name="colorOnPrimary">@color/on_primary</item>

    <item name="colorSecondary">@color/secondary</item>
    <item name="colorOnSecondary">@color/on_secondary</item>

    <item name="android:colorBackground">@color/background</item>
    <item name="colorOnBackground">@color/on_background</item>
    <item name="android:colorForeground">@color/on_background</item>

    <item name="colorSurface">@color/surface</item>
    <item name="colorOnSurface">@color/on_surface</item>
    <item name="popupTheme">@style/Theme.Grocy</item>

    <!-- not working, tooltip is inverted -->
    <item name="tooltipStyle">@style/Widget.Grocy.Tooltip</item>

    <item name="android:colorControlNormal">@color/on_background</item>
    <item name="android:colorControlActivated">@color/secondary</item>
    <item name="android:colorControlHighlight">@color/highlight</item>
    <item name="android:colorEdgeEffect">@color/highlight</item>

    <item name="actionOverflowButtonStyle">@style/Widget.Grocy.ActionButton.OverFlow</item>

    <item name="android:fontFamily">@font/jost_book</item>

    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowIsFloating">false</item>

    <item name="bottomSheetStyle">@style/Shape.Grocy.BottomSheet</item>
  </style>

  <style name="Theme.Grocy.BottomSheetDialog" parent="Base.Grocy.BottomSheetDialog">
    <item name="android:navigationBarColor">@color/black</item>
  </style>

  <style name="Theme.Grocy.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
    <item name="colorPrimary">@color/retro_green</item>
  </style>

  <style name="Theme.Grocy.BottomSheetDialog.SoftInput" parent="Theme.Grocy.BottomSheetDialog">
    <item name="android:windowSoftInputMode">adjustResize</item>
  </style>

</resources>
