<resources>

  <attr name="colorCustomBlue" format="color" />
  <attr name="colorOnCustomBlue" format="color" />
  <attr name="colorCustomBlueContainer" format="color" />
  <attr name="colorOnCustomBlueContainer" format="color" />

  <attr name="colorCustomGreen" format="color" />
  <attr name="colorOnCustomGreen" format="color" />
  <attr name="colorCustomGreenContainer" format="color" />
  <attr name="colorOnCustomGreenContainer" format="color" />

  <attr name="colorCustomYellow" format="color" />
  <attr name="colorOnCustomYellow" format="color" />
  <attr name="colorCustomYellowContainer" format="color" />
  <attr name="colorOnCustomYellowContainer" format="color" />

  <attr name="colorCustomOrange" format="color" />
  <attr name="colorOnCustomOrange" format="color" />
  <attr name="colorCustomOrangeContainer" format="color" />
  <attr name="colorOnCustomOrangeContainer" format="color" />

  <declare-styleable name="RoundedCornerImageView">
    <attr name="radius" format="dimension" />
    <attr name="bottomCornersRound" format="boolean" />
    <attr name="topCornersRound" format="boolean" />
    <attr name="showBottomShadow" format="boolean" />
  </declare-styleable>

  <declare-styleable name="MaterialTimelineView" parent="">
    <attr name="timeline_position">
      <enum name="first" value="0"/>
      <enum name="middle" value="1"/>
      <enum name="last" value="2"/>
    </attr>
    <attr name="timeline_type">
      <enum name="header" value="0"/>
      <enum name="item" value="1"/>
    </attr>
    <attr name="timeline_radio_radius" format="dimension"/>
    <attr name="timeline_margin_start" format="dimension"/>
  </declare-styleable>

</resources>