<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:layout_margin="16dp"
            android:text="@string/property_store"
            android:textAppearance="@style/TextAppearance.Grocy.BottomSheet.Title"/>

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_master_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:contentInsetStart="12dp"
            app:menu="@menu/menu_actions_master_item" />

    </LinearLayout>

    <View
        style="@style/Theme.Grocy.Divider"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp">

            <xyz.zedler.patrick.grocy.view.ListItem
                android:id="@+id/item_master_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <xyz.zedler.patrick.grocy.view.ListItem
                android:id="@+id/item_master_store_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>