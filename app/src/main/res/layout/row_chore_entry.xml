<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/linear_container"
  style="@style/Widget.Grocy.LinearLayout.ListItem.TwoLine.Clickable.More"
  android:background="@drawable/ripple_list_item_swipeable">

  <LinearLayout style="@style/Widget.Grocy.LinearLayout.ListItem.TextBox.Stretch">

    <TextView
      android:id="@+id/title"
      style="@style/Widget.Grocy.TextView.ListItem.Title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical">

      <TextView
        android:id="@+id/days"
        style="@style/Widget.Grocy.TextView.ListItem.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"/>

      <TextView
        android:id="@+id/days_human"
        style="@style/Widget.Grocy.TextView.ListItem.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:singleLine="true"
        android:textStyle="italic"/>

      <ImageView
        android:id="@+id/image_reschedule"
        style="@style/Widget.Grocy.ImageView.Icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_round_schedule"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical">

      <TextView
        android:id="@+id/user"
        style="@style/Widget.Grocy.TextView.ListItem.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"/>

      <ImageView
        android:id="@+id/image_reassign"
        style="@style/Widget.Grocy.ImageView.Icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_round_swap_horiz"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>