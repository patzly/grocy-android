<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="xyz.zedler.patrick.grocy.R"/>
        <import type="xyz.zedler.patrick.grocy.util.Constants"/>
        <variable
            name="viewModel"
            type="xyz.zedler.patrick.grocy.viewmodel.SettingsViewModel"/>
        <variable
            name="activity"
            type="xyz.zedler.patrick.grocy.activity.MainActivity"/>
        <variable
            name="fragment"
            type="xyz.zedler.patrick.grocy.fragment.SettingsCatBehaviorFragment"/>
        <variable
            name="sharedPrefs"
            type="android.content.SharedPreferences"/>
        <variable
            name="clickUtil"
            type="xyz.zedler.patrick.grocy.util.ClickUtil"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">

            <LinearLayout
                android:id="@+id/linear_app_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/primary">

                <FrameLayout
                    android:id="@+id/frame_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="20dp"
                    android:background="?attr/actionBarItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:contentDescription="@string/action_back"
                    android:tooltipText="@string/action_back"
                    android:focusable="true"
                    tools:targetApi="o"
                    android:onClick="@{v -> activity.navigateUp()}">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_round_arrow_back" />

                </FrameLayout>

                <TextView
                    android:id="@+id/app_bar_title"
                    style="@style/Widget.Grocy.TextView.Toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/category_behavior" />

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:actionBarSize"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/linear_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="80dp"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/Widget.Grocy.LinearLayout.ListItem.TwoLine.Icon.Clickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> switchLogging.setChecked(!switchLogging.isChecked())}">

                    <ImageView
                        android:id="@+id/image_help"
                        style="@style/Widget.Grocy.ImageView.ListItem.Icon"
                        tools:ignore="ContentDescription"
                        android:src="@drawable/ic_round_live_help"/>

                    <LinearLayout style="@style/Widget.Grocy.LinearLayout.ListItem.TextBox.Stretch">

                        <TextView
                            style="@style/Widget.Grocy.TextView.ListItem.Title"
                            android:text="@string/setting_beginner_mode"/>

                        <TextView
                            style="@style/Widget.Grocy.TextView.ListItem.Description"
                            android:text="@string/setting_beginner_mode_description"/>

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_logging"
                        style="@style/Widget.Grocy.Switch"
                        android:onCheckedChanged="@{() -> activity.startIconAnimation(imageHelp, true)}"
                        android:checked="@={viewModel.beginnerModeEnabled}"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/Widget.Grocy.LinearLayout.ListItem.TwoLine.Icon.Clickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> viewModel.showShortcutsBottomSheet()}"
                    app:clickUtil="@{clickUtil}">

                    <ImageView
                        style="@style/Widget.Grocy.ImageView.ListItem.Icon"
                        tools:ignore="ContentDescription"
                        android:src="@drawable/ic_round_shortcut"/>

                    <LinearLayout style="@style/Widget.Grocy.LinearLayout.ListItem.TextBox.Stretch">

                        <TextView
                            style="@style/Widget.Grocy.TextView.ListItem.Title"
                            android:text="@string/setting_manage_shortcuts"/>

                        <TextView
                            android:id="@+id/subtitle_shortcuts"
                            style="@style/Widget.Grocy.TextView.ListItem.Description"
                            android:text="@string/subtitle_none_selected"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/Widget.Grocy.LinearLayout.ListItem.TwoLine.Icon.Clickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> switchExpand.setChecked(!switchExpand.isChecked())}">

                    <ImageView
                        android:id="@+id/image_expand"
                        style="@style/Widget.Grocy.ImageView.ListItem.Icon"
                        tools:ignore="ContentDescription"
                        android:src="@drawable/ic_round_vertical_align_top_anim"/>

                    <LinearLayout style="@style/Widget.Grocy.LinearLayout.ListItem.TextBox.Stretch">

                        <TextView
                            style="@style/Widget.Grocy.TextView.ListItem.Title"
                            android:text="@string/setting_expand_bottom_sheets"/>

                        <TextView
                            style="@style/Widget.Grocy.TextView.ListItem.Description"
                            android:text="@string/setting_expand_bottom_sheets_description"/>

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_expand"
                        style="@style/Widget.Grocy.Switch"
                        android:onCheckedChanged="@{() -> activity.startIconAnimation(imageExpand, true)}"
                        android:checked="@={viewModel.expandBottomSheetsEnabled}"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/Widget.Grocy.LinearLayout.ListItem.TwoLine.Icon.Clickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> switchScanModeConsume.setChecked(!switchScanModeConsume.isChecked())}">

                    <ImageView
                        style="@style/Widget.Grocy.ImageView.ListItem.Icon"
                        tools:ignore="ContentDescription"
                        android:src="@drawable/ic_round_barcode_scan"/>

                    <LinearLayout style="@style/Widget.Grocy.LinearLayout.ListItem.TextBox.Stretch">

                        <TextView
                            style="@style/Widget.Grocy.TextView.ListItem.Title"
                            android:text="@string/setting_scan_mode_consume"
                            android:maxLines="4"/>

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_scan_mode_consume"
                        style="@style/Widget.Grocy.Switch"
                        android:checked="@={viewModel.scanModeConsumeEnabled}"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/Widget.Grocy.LinearLayout.ListItem.TwoLine.Icon.Clickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> switchScanModePurchase.setChecked(!switchScanModePurchase.isChecked())}">

                    <ImageView
                        style="@style/Widget.Grocy.ImageView.ListItem.Icon"
                        tools:ignore="ContentDescription"
                        android:src="@drawable/ic_round_barcode_scan"/>

                    <LinearLayout style="@style/Widget.Grocy.LinearLayout.ListItem.TextBox.Stretch">

                        <TextView
                            style="@style/Widget.Grocy.TextView.ListItem.Title"
                            android:text="@string/setting_scan_mode_purchase"
                            android:maxLines="4"/>

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_scan_mode_purchase"
                        style="@style/Widget.Grocy.Switch"
                        android:checked="@={viewModel.scanModePurchaseEnabled}"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/Widget.Grocy.LinearLayout.ListItem.TwoLine.Icon.Clickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v -> switchScanModeShopping.setChecked(!switchScanModeShopping.isChecked())}">

                    <ImageView
                        style="@style/Widget.Grocy.ImageView.ListItem.Icon"
                        tools:ignore="ContentDescription"
                        android:src="@drawable/ic_round_barcode_scan"/>

                    <LinearLayout style="@style/Widget.Grocy.LinearLayout.ListItem.TextBox.Stretch">

                        <TextView
                            style="@style/Widget.Grocy.TextView.ListItem.Title"
                            android:text="@string/setting_scan_mode_shopping_item"
                            android:maxLines="4"/>

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_scan_mode_shopping"
                        style="@style/Widget.Grocy.Switch"
                        android:checked="@={viewModel.scanModeShoppingItemEnabled}"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>