<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TESTED -->

    <style name="Theme.Grocy" parent="Base.Grocy">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="Theme.Grocy.BottomSheetDialog" parent="Base.Grocy.BottomSheetDialog">
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:navigationBarDividerColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.Grocy.BottomAppBar" parent="Theme.Grocy">
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:navigationBarDividerColor">@color/stroke_secondary</item>
        <item name="android:windowSplashscreenContent">@drawable/splash_content_primary</item>
    </style>

    <style name="Theme.Grocy.BottomAppBar.SwipeToRefresh" parent="Theme.Grocy.BottomAppBar">
        <item name="android:statusBarColor">@color/primary</item>
    </style>

</resources>