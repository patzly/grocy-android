<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="line_top"
                android:pathData="M 4 7 L 20 7"
                android:strokeColor="#000000"
                android:strokeWidth="2"
                android:strokeLineCap="round"/>
            <path
                android:name="line_middle"
                android:pathData="M 7 12 L 17 12"
                android:strokeColor="#000000"
                android:strokeWidth="2"
                android:strokeLineCap="round"/>
            <path
                android:name="line_bottom"
                android:pathData="M 11 17 L 13 17"
                android:strokeColor="#000000"
                android:strokeWidth="2"
                android:strokeLineCap="round"/>
        </vector>
    </aapt:attr>
    <target android:name="line_top">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="120"
                    android:valueFrom="M 4 7 L 20 7"
                    android:valueTo="M 12 7 L 12 7"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeAlpha"
                    android:startOffset="20"
                    android:duration="100"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="line_middle">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="120"
                    android:valueFrom="M 7 12 L 17 12"
                    android:valueTo="M 12 12 L 12 12"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeAlpha"
                    android:startOffset="20"
                    android:duration="100"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="line_bottom">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="120"
                    android:valueFrom="M 11 17 L 13 17"
                    android:valueTo="M 12 17 L 12 17"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeAlpha"
                    android:startOffset="20"
                    android:duration="100"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
