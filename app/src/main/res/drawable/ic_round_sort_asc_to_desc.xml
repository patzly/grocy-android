<animated-vector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:aapt="http://schemas.android.com/aapt">
  <aapt:attr name="android:drawable">
    <vector
      android:name="vector"
      android:width="24dp"
      android:height="24dp"
      android:viewportWidth="24"
      android:viewportHeight="24">
      <path
        android:name="line_top"
        android:pathData="M 4 7 L 21 7"
        android:strokeColor="@color/icon"
        android:strokeWidth="2"
        android:trimPathEnd="0.223"
        android:strokeLineCap="round" />
      <path
        android:name="line_center"
        android:pathData="M 4 12 L 20 12"
        android:strokeColor="@color/icon"
        android:strokeWidth="2"
        android:trimPathEnd="0.625"
        android:strokeLineCap="round" />
      <path
        android:name="line_bottom"
        android:pathData="M 4 17 L 20 17"
        android:strokeColor="@color/icon"
        android:strokeWidth="2"
        android:strokeLineCap="round" />
    </vector>
  </aapt:attr>
  <target android:name="line_bottom">
    <aapt:attr name="android:animation">
      <set>
        <objectAnimator
          android:propertyName="trimPathEnd"
          android:duration="100"
          android:valueFrom="1"
          android:valueTo="0.1"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="trimPathEnd"
          android:startOffset="100"
          android:duration="100"
          android:valueFrom="0.1"
          android:valueTo="0.3"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="trimPathEnd"
          android:startOffset="200"
          android:duration="100"
          android:valueFrom="0.3"
          android:valueTo="0.25"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
      </set>
    </aapt:attr>
  </target>
  <target android:name="line_center">
    <aapt:attr name="android:animation">
      <set>
        <objectAnimator
          android:propertyName="trimPathEnd"
          android:duration="100"
          android:valueFrom="0.625"
          android:valueTo="0.4"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="trimPathEnd"
          android:startOffset="100"
          android:duration="100"
          android:valueFrom="0.4"
          android:valueTo="0.7"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="trimPathEnd"
          android:startOffset="200"
          android:duration="100"
          android:valueFrom="0.7"
          android:valueTo="0.625"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
      </set>
    </aapt:attr>
  </target>
  <target android:name="line_top">
    <aapt:attr name="android:animation">
      <set>
        <objectAnimator
          android:propertyName="trimPathEnd"
          android:duration="200"
          android:valueFrom="0.235"
          android:valueTo="1"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="trimPathEnd"
          android:startOffset="200"
          android:duration="100"
          android:valueFrom="1"
          android:valueTo="0.943"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
      </set>
    </aapt:attr>
  </target>
</animated-vector>
